{
  "manifest_version": 3,
  "name": "SteamAuth",
  "description": "SteamAuth is a browser extension that allows you sharing your Inventory or Trading Data with other websites securely.",
  "version": "2.0.2",
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.jsx-loader-B0-j3uXS.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "resources": [
        "public/notification.mp3",
        "assets/browser-polyfill-DaZBtFLh.js",
        "assets/index.jsx-D5mIIc-k.js"
      ],
      "use_dynamic_url": false
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "permissions": [
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "*://steamcommunity.com/*",
    "*://www.steamwebapi.com/*"
  ],
  "icons": {
    "16": "src/assets/logo.png",
    "32": "src/assets/steamauth_logo32.png",
    "48": "src/assets/steamauth_logo64.png",
    "128": "src/assets/steamauth_logo128.png"
  }
}
